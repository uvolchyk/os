if [ $1 -ge $(( $2 + $3 )) ] || [ $2 -ge $(( $1 + $3 )) ] || [ $3 -ge $(( $2 + $1 )) ]; then
	echo "Это не треугольник"
elif [ $(( $1 * $1 )) = if [ $# -ne 3 ]; then
	echo "Количество аргументов не равно 3"
	exit 1
fi

sum=0
for n in $@ 
do
	sum=$(( $sum + $n ))
done
echo "Среднее значение суммы аргументов: $(( $sum / $# ))"

$(( $2 * $2 )) ]
